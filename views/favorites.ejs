<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Favorite Books</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('partials/header') %>

    <div class="container mt-5">
        <h1 class="text-center mb-4">Your Favorite Books</h1>

        <% if (books.length === 0) { %>
            <p class="text-center">You have no favorite books yet.</p>
        <% } else { %>
            <div class="row row-cols-1 row-cols-md-3 g-4">
                <% books.forEach(function(book) { %>
                    <div class="col">
                        <a href="/book/<%= book.key.split('/').pop() %>" class="text-decoration-none text-dark">
                            <div class="card h-100 shadow-sm">
                                <% if (book.cover_i) { %>
                                    <img src="https://covers.openlibrary.org/b/id/<%= book.cover_i %>-M.jpg" class="card-img-top" alt="<%= book.title %>">
                                <% } else { %>
                                    <img src="/images/placeholder.png" class="card-img-top" alt="No cover available">
                                <% } %>
                                <div class="card-body">
                                  <h5 class="card-title"><%= book.title %></h5>
                                  <p class="card-text"><%= book.author_name ? book.author_name.join(", ") : "Unknown author" %></p>
                                  <a href="/book/<%= book.key.split('/').pop() %>" class="btn btn-primary btn-sm mb-2">View Details</a>
                                  <form action="/remove-favorite" method="POST">
                                      <input type="hidden" name="key" value="<%= book.key %>">
                                      <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                                  </form>
                              </div>
                            </div>
                        </a>
                    </div>
                <% }); %>
            </div>
        <% } %>
    </div>

    <%- include('partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

  